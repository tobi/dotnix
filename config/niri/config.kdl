// KDL format config: https://kdl.dev
input {
    keyboard {
        xkb {
            options "caps:super"
        }
        repeat-delay 400
        repeat-rate 40
        numlock
    }

    touchpad {
        tap
        dwt
        accel-profile "flat"
        click-method "clickfinger"
        scroll-factor 0.5
    }

    mouse {
        accel-profile "flat"
    }

    warp-mouse-to-focus
    focus-follows-mouse max-scroll-amount="0%"
}

// Overview configuration
overview {
    workspace-shadow {
        off
    }
}

// Output configuration
output "eDP-1" {
    scale 1.5
    transform "normal"
    position x=0 y=0
}

output "Apple Computer Inc StudioDisplay 0x47040065" {
    scale 1.8
    focus-at-startup
}

layout {
    gaps 15

    center-focused-column "never"

    background-color "transparent"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width {
        proportion 0.5;
    }

    focus-ring {
        // off
        width 1

        inactive-color "#505050"

        active-gradient from="teal" to="purple" angle=90
        inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
    }

    border {
        off
        width 3
        active-color "#ffc87f"
        inactive-color "#505050"
        urgent-color "#9b0000"
    }

    shadow {
        on
        softness 30
        spread 3
        offset x=3 y=3
        color "#000000"
    }

    struts {
        // left 24
        // right 24
     }
}

environment { }

cursor {
    xcursor-theme "capitaine-cursors"
    xcursor-size 26

    hide-when-typing
}

spawn-at-startup "swaylock"
spawn-at-startup "waybar"
spawn-at-startup "wbg" ".config/wallpaper.jpg"
spawn-at-startup "ghostty"
spawn-at-startup "sway-audio-idle-inhibit"

prefer-no-csd

hotkey-overlay {
    skip-at-startup
}

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

animations {
    slowdown 1.2

    workspace-switch {
        spring damping-ratio=0.7 stiffness=1200 epsilon=0.0001
    }

    window-open {
        duration-ms 350
        curve "ease-out-expo"
    }

    window-close {
        duration-ms 250
        curve "ease-out-cubic"
    }

    horizontal-view-movement {
        spring damping-ratio=0.8 stiffness=1000 epsilon=0.0001
    }

    window-movement {
        spring damping-ratio=0.75 stiffness=900 epsilon=0.0001
    }

    window-resize {
        spring damping-ratio=0.8 stiffness=1100 epsilon=0.0001
    }

    config-notification-open-close {
        spring damping-ratio=0.5 stiffness=1200 epsilon=0.001
    }

    screenshot-ui-open {
        duration-ms 300
        curve "ease-out-cubic"
    }

    overview-open-close {
        spring damping-ratio=0.75 stiffness=1000 epsilon=0.0001
    }

}

// Window rules
window-rule {
    match app-id=r#"^xdg-desktop-portal-gtk$"#
    match title="^Open"
    open-floating true
    max-width 1000
    max-height 1000
}

