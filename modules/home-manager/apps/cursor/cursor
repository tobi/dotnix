#!/usr/bin/env bash
cursor_app="$(find ~/Applications -maxdepth 1 -name 'Cursor*.AppImage' | sort | tail -n 1)"
if [[ -f "$cursor_app" ]]; then
    # If no arguments provided, just launch Cursor
    if [[ $# -eq 0 ]]; then
        appimage-run "$cursor_app"
        exit 0
    fi
fi

echo "Cursor AppImage not found."
exit 1
