// Creative Animation Profiles for Niri
// Copy any of these into your animations block in config.kdl

// Profile 1: Bouncy & Playful
// Features underdamped springs that create oscillation/bounce effects
animations {
    slowdown 0.7
    
    workspace-switch {
        spring damping-ratio=0.5 stiffness=1500 epsilon=0.0001
    }
    
    window-open {
        spring damping-ratio=0.4 stiffness=2000 epsilon=0.0001
    }
    
    window-close {
        duration-ms 180
        curve "ease-in-expo"
    }
    
    horizontal-view-movement {
        spring damping-ratio=0.6 stiffness=1200 epsilon=0.0001
    }
    
    window-movement {
        spring damping-ratio=0.55 stiffness=1000 epsilon=0.0001
    }
    
    window-resize {
        spring damping-ratio=0.7 stiffness=1300 epsilon=0.0001
    }
    
    config-notification-open-close {
        spring damping-ratio=0.3 stiffness=1800 epsilon=0.001
    }
    
    overview-open-close {
        spring damping-ratio=0.6 stiffness=1100 epsilon=0.0001
    }
}

// Profile 2: Smooth & Professional
// Features critical damping (1.0) for no overshoot, with high stiffness for speed
animations {
    slowdown 0.9
    
    workspace-switch {
        spring damping-ratio=1.0 stiffness=1500 epsilon=0.0001
    }
    
    window-open {
        duration-ms 250
        curve "ease-out-expo"
    }
    
    window-close {
        duration-ms 200
        curve "ease-out-cubic"
    }
    
    horizontal-view-movement {
        spring damping-ratio=1.0 stiffness=1200 epsilon=0.0001
    }
    
    window-movement {
        spring damping-ratio=1.0 stiffness=1400 epsilon=0.0001
    }
    
    window-resize {
        spring damping-ratio=1.0 stiffness=1600 epsilon=0.0001
    }
    
    config-notification-open-close {
        spring damping-ratio=0.8 stiffness=1400 epsilon=0.001
    }
    
    overview-open-close {
        spring damping-ratio=1.0 stiffness=1300 epsilon=0.0001
    }
}

