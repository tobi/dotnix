    }
    
    window-open {
        duration-ms 400
        curve "ease-out-cubic"
    }
    
    window-close {
        duration-ms 350
        curve "ease-out-cubic"
    }
    
    horizontal-view-movement {
        spring damping-ratio=1.3 stiffness=500 epsilon=0.0001
    }
    
    window-movement {
